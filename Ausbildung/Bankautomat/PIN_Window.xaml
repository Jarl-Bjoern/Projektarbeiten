        <Button Name="btn_Abbruch" Content="ABBRUCH" Grid.Column="4" Grid.Row="1" FontWeight="Bold" Margin="0 5 0 5" Background="RED" Click="btn_Abbruch_Click"></Button>
        <Button Name="btn_Korrektur" Content="KORREKTUR" Grid.Column="4" Grid.Row="2" FontWeight="Bold" Margin="0 5 0 5" Background="Yellow" Click="btn_Korrektur_Click"></Button>
        <Button Name="btn_Hilfe" Content="HILFE" Grid.Column="4" Grid.Row="3" FontWeight="Bold" Margin="0 5 0 5" Background="White" Click="btn_Hilfe_Click"></Button>
        <Button x:Name="btn_Bestaetigung" x:FieldModifier="public" Content="BESTÄTIGUNG" Grid.Column="4" Grid.Row="4" FontWeight="Bold" Margin=" 0 5 0 5" Background="Green" Click="btn_Bestaetigung_Click"></Button>
